{
  "name": "saggre/wordpress-org-repository-php-wrapper",
  "description": "A Wordpress.org Repository API wrapper for PHP",
  "license": "LGPL-3.0-only",
  "type": "library",
  "authors": [
    {
      "name": "Sakri Koskimies",
      "email": "sakri.koskimies@hotmail.com"
    }
  ],
  "keywords": [
    "wordpress",
    "plugin",
    "theme",
    "api",
    "repository",
    "wordpress.org"
  ],
  "autoload": {
    "psr-4": {
      "Saggre\\WordPress\\Repository\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Saggre\\WordPress\\Repository\\Test\\": "test/"
    }
  },
  "require": {
    "php": "^8.0.2",
    "ext-curl": "*",
    "league/flysystem": "^3.30",
    "league/flysystem-webdav": "^3.30"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "saggre/phpdocumentor-markdown": "^1.0"
  },
  "scripts": {
    "create-docs": "phpdoc --directory=src --target=docs"
  }
}
